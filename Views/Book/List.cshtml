@model IEnumerable<LibraryManagementApp.Models.BookListViewModel>

@{
    ViewData["Title"] = "List";
}

<h2>Kitap Listesi</h2>

<p>
    <a asp-controller="Book" asp-action="Create" class="btn btn-primary">Yeni Kitap Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Başlık</th>
            <th scope="col">Yazar</th>
            <th scope="col">Tür</th>
            <th scope="col">Yayın Tarihi</th>
            <th scope="col">ISBN</th>
            <th scope="col">Mevcut Kopya</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Title</th>
                <td>@item.AuthorName</td>
                <td>@item.Genre</td>
                <td>@item.PublishDate.ToShortDateString()</td>
                <td>@item.ISBN</td>
                <td>@item.CopiesAvailable</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detaylar</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Düzenle</a> |
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
