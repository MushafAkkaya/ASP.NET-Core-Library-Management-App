
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibraryManagementApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <header>
        <!--Navbar yapısı-->
        <nav class="navbar navbar-expand-lg bg-secondary">
            <div class="container-fluid">
                <a class="navbar-brand" href="/home/index">
                    <img src="https://cdn-icons-png.flaticon.com/512/195/195786.png" alt="Bootstrap" width="30" height="24">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active fw-bold" style="color:aliceblue" aria-current="page" href="/home/about">Hakkında</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active fw-bold" style="color:aliceblue" aria-current="page" href="/book/list">Kitaplar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold" style="color:aliceblue" href="/author/list">Yazarlar</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!--Sayfa içeriği render body ile container içerisinde oluşacak.-->
    <div class="container">
        @RenderBody()
    </div>

    <!--Footer Partial View-->
    @await Html.PartialAsync("_Footer")
    
</body>
</html>
